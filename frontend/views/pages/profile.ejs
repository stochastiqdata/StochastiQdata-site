    <!-- Carte informations personnelles -->
    <div class="card p-6">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-bold text-gray-900 dark:text-white">Informations personnelles</h2>
      </div>

      <div class="flex items-start gap-6">
        <img id="profile-avatar"
             src="/images/default-avatar.png"
             alt="Avatar"
             class="w-24 h-24 rounded-full object-cover border-4 border-primary-500"
             onerror="this.src='/images/default-avatar.png'">

        <div class="flex-1 space-y-4">
          <div>
            <label class="text-sm font-medium text-gray-500 dark:text-gray-400">Nom complet</label>
            <p id="profile-name" class="text-lg font-semibold text-gray-900 dark:text-white">-</p>
          </div>
          <div>
            <label class="text-sm font-medium text-gray-500 dark:text-gray-400">Email</label>
            <p id="profile-email" class="text-gray-900 dark:text-white">-</p>
          </div>
          <div>
            <label class="text-sm font-medium text-gray-500 dark:text-gray-400">Membre depuis</label>
            <p id="profile-created" class="text-gray-900 dark:text-white">-</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Statistiques -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <a href="/favorites" class="card p-6 text-center hover:shadow-lg transition-all cursor-pointer hover:scale-[1.02]">
        <div class="w-12 h-12 mx-auto mb-3 rounded-xl bg-pink-100 dark:bg-pink-900/30 flex items-center justify-center">
          <svg class="w-6 h-6 text-pink-500" viewBox="0 0 24 24" fill="currentColor">
            <path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/>
          </svg>
        </div>
        <p id="favorites-count" class="text-3xl font-bold text-gray-900 dark:text-white mb-1">0</p>
        <p class="text-sm text-gray-500 dark:text-gray-400">Favoris</p>
      </a>

      <div class="card p-6 text-center">
        <div class="w-12 h-12 mx-auto mb-3 rounded-xl bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center">
          <svg class="w-6 h-6 text-blue-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
            <polyline points="7 10 12 15 17 10"/>
            <line x1="12" y1="15" x2="12" y2="3"/>
          </svg>
        </div>
        <p id="datasets-count" class="text-3xl font-bold text-gray-900 dark:text-white mb-1">0</p>
        <p class="text-sm text-gray-500 dark:text-gray-400">Datasets ajoutés</p>
      </div>

      <div class="card p-6 text-center">
        <div class="w-12 h-12 mx-auto mb-3 rounded-xl bg-teal-100 dark:bg-teal-900/30 flex items-center justify-center">
          <svg class="w-6 h-6 text-teal-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M14 9V5a3 3 0 0 0-3-3l-4 9v11h11.28a2 2 0 0 0 2-1.7l1.38-9a2 2 0 0 0-2-2.3zM7 22H4a2 2 0 0 1-2-2v-7a2 2 0 0 1 2-2h3"/>
          </svg>
        </div>
        <p id="ratings-count" class="text-3xl font-bold text-gray-900 dark:text-white mb-1">0</p>
        <p class="text-sm text-gray-500 dark:text-gray-400">Notations</p>
      </div>
    </div>

    <!-- Activité récente -->
    <div class="card p-6">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl font-bold text-gray-900 dark:text-white">Activité récente</h2>
        <a href="/" class="text-sm text-primary-500 hover:text-primary-600 font-medium">Voir tout</a>
      </div>
      <div id="recent-activity" class="space-y-3">
        <div class="flex items-center gap-3 p-3 rounded-lg bg-gray-50 dark:bg-navy-700">
          <div class="w-10 h-10 rounded-lg bg-gray-200 dark:bg-navy-600 flex items-center justify-center">
            <svg class="w-5 h-5 text-gray-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <path d="M12 6v6l4 2"/>
            </svg>
          </div>
          <div class="flex-1">
            <p class="text-sm text-gray-500 dark:text-gray-400">Aucune activité récente</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Actions rapides -->
    <div class="card p-6">
      <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4">Actions rapides</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <a href="/favorites" class="flex items-center gap-3 p-4 rounded-xl bg-gray-50 dark:bg-navy-700 hover:bg-gray-100 dark:hover:bg-navy-600 transition-all">
          <svg class="w-5 h-5 text-pink-500" viewBox="0 0 24 24" fill="currentColor">
            <path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/>
          </svg>
          <div>
            <p class="font-medium text-gray-900 dark:text-white">Mes Favoris</p>
            <p class="text-sm text-gray-500 dark:text-gray-400">Voir mes datasets favoris</p>
          </div>
        </a>

        <a href="/add-dataset" class="flex items-center gap-3 p-4 rounded-xl bg-gray-50 dark:bg-navy-700 hover:bg-gray-100 dark:hover:bg-navy-600 transition-all">
          <svg class="w-5 h-5 text-primary-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14"/>
            <path d="M12 5v14"/>
          </svg>
          <div>
            <p class="font-medium text-gray-900 dark:text-white">Ajouter un dataset</p>
            <p class="text-sm text-gray-500 dark:text-gray-400">Partager un nouveau dataset</p>
          </div>
        </a>

        <a href="/settings" class="flex items-center gap-3 p-4 rounded-xl bg-gray-50 dark:bg-navy-700 hover:bg-gray-100 dark:hover:bg-navy-600 transition-all">
          <svg class="w-5 h-5 text-gray-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="3"/>
            <path d="M12 1v6m0 6v6"/>
            <path d="m1 12 6-6m6 6 6-6m-6 6-6 6m6-6 6 6"/>
          </svg>
          <div>
            <p class="font-medium text-gray-900 dark:text-white">Paramètres</p>
            <p class="text-sm text-gray-500 dark:text-gray-400">Gérer vos préférences</p>
          </div>
        </a>
      </div>
    </div>
  </div>
</div>

<script>
// Authentification supprimée - Page affichera simplement le message de connexion requise
document.addEventListener('DOMContentLoaded', () => {
  const loadingEl = document.getElementById('profile-loading');
  const loginEl = document.getElementById('profile-login');

  // Afficher le message de connexion requise
  loadingEl.classList.add('hidden');
  loginEl.classList.remove('hidden');
});
</script>
