<div class="min-h-[70vh] flex items-center justify-center px-4">
  <div class="text-center max-w-2xl">
    <!-- Icône d'erreur animée -->
    <div class="mb-8 flex justify-center">
      <div class="relative">
        <div class="w-32 h-32 rounded-full bg-gradient-to-br from-red-500/20 to-pink-500/20 flex items-center justify-center animate-pulse">
          <svg class="w-16 h-16 text-red-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <% if (statusCode === 404) { %>
              <!-- Icône 404 - Page non trouvée -->
              <circle cx="12" cy="12" r="10"/>
              <path d="m15 9-6 6"/>
              <path d="m9 9 6 6"/>
            <% } else { %>
              <!-- Icône 500 - Erreur serveur -->
              <path d="M10.29 3.86 1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/>
              <line x1="12" y1="9" x2="12" y2="13"/>
              <line x1="12" y1="17" x2="12.01" y2="17"/>
            <% } %>
          </svg>
        </div>
        <div class="absolute inset-0 w-32 h-32 rounded-full bg-gradient-to-br from-red-500/10 to-pink-500/10 animate-ping"></div>
      </div>
    </div>

    <!-- Code d'erreur -->
    <h1 class="text-8xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-red-500 to-pink-500 mb-4">
      <%= statusCode || 500 %>
    </h1>

    <!-- Message d'erreur -->
    <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
      <% if (statusCode === 404) { %>
        Page non trouvée
      <% } else if (statusCode === 403) { %>
        Accès refusé
      <% } else if (statusCode === 401) { %>
        Authentification requise
      <% } else { %>
        Une erreur est survenue
      <% } %>
    </h2>

    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8 max-w-xl mx-auto">
      <%= message || 'Désolé, une erreur inattendue s\'est produite. Notre équipe a été notifiée et travaille sur le problème.' %>
    </p>

    <!-- Actions -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a href="/" class="btn-primary inline-flex items-center justify-center">
        <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
          <polyline points="9 22 9 12 15 12 15 22"/>
        </svg>
        Retour à l'accueil
      </a>

      <button onclick="window.history.back()" class="btn-outline inline-flex items-center justify-center">
        <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="m12 19-7-7 7-7"/>
          <path d="M19 12H5"/>
        </svg>
        Page précédente
      </button>
    </div>

    <!-- Liens utiles -->
    <div class="mt-12 pt-8 border-t border-gray-200 dark:border-navy-700">
      <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">Vous cherchez quelque chose de spécifique ?</p>
      <div class="flex flex-wrap gap-4 justify-center text-sm">
        <a href="/" class="text-primary-500 hover:text-primary-600 transition-colors">Dashboard</a>
        <span class="text-gray-300 dark:text-gray-600">•</span>
        <a href="/profile" class="text-primary-500 hover:text-primary-600 transition-colors">Mon Profil</a>
        <span class="text-gray-300 dark:text-gray-600">•</span>
        <a href="/favorites" class="text-primary-500 hover:text-primary-600 transition-colors">Favoris</a>
        <span class="text-gray-300 dark:text-gray-600">•</span>
        <a href="/guide" class="text-primary-500 hover:text-primary-600 transition-colors">Guide</a>
        <span class="text-gray-300 dark:text-gray-600">•</span>
        <a href="/faq" class="text-primary-500 hover:text-primary-600 transition-colors">FAQ</a>
      </div>
    </div>
  </div>
</div>
